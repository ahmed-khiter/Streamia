@model IptvUser
@{
    ViewData["Title"] = "Add";
}

<form>
    <div class="row">
        <div class="form-group col">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" type="text" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group col">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" type="text" />
            <span asp-validati-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group col">
            <label asp-for="Subscription"></label>
            <input asp-for="Subscription" class="form-control" type="text" />
            <span asp-validation-for="Subscription" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="form-group col">
            <label asp-for="Bouquet"></label>
            <select asp-for="Bouquet" asp-items="@(new SelectList(ViewBag.Bouquets,"Id","Name"))">
            </select>
            <span asp-validation-for="Bouquet" class="text-danger"></span>
        </div>
        <div class="form-group col">

        </div>
        <div class="form-group col">

        </div>
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/lib/select2/js/select2.full.min.js"></script>
    <script>
        $('select').select2({
            placeholder: 'Select one or more bouquets'
        });
    </script>
}