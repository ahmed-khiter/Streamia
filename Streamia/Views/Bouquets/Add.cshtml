@model Bouquet
@{
    ViewData["Title"] = "Add Bouquet";
}

@section Styles {
    <link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/ttskch/select2-bootstrap4-theme/dist/select2-bootstrap4.min.css" rel="stylesheet" />
}

<partial name="~/Views/Partials/_Navigation.cshtml" />

<form method="post">

    <div class="row">

        <div class="form-group col-md-6">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="Points"></label>
            <input asp-for="Points" class="form-control" />
            <span class="text-danger" asp-validation-for="Points"></span>
        </div>

    </div>

    <hr />

    <h6 class="font-weight-bold text-primary"><i class="fa fa-plus"></i> Add to this bouquet</h6>

    <div class="row">

        <div class="form-group col-md-3">
            <label asp-for="StreamIds"></label>
            <select class="form-control" multiple asp-for="StreamIds" asp-items="@(new SelectList(ViewBag.Streams, "Id", "Name"))">
            </select>
            <span class="text-danger" asp-validation-for="StreamIds"></span>
        </div>

        <div class="form-group col-md-3">
            <label asp-for="MovieIds"></label>
            <select class="form-control" multiple asp-for="MovieIds" asp-items="@(new SelectList(ViewBag.Movies, "Id", "Name"))">
            </select>
            <span class="text-danger" asp-validation-for="MovieIds"></span>
        </div>

        <div class="form-group col-md-3">
            <label asp-for="SeriesIds"></label>
            <select class="form-control" multiple asp-for="SeriesIds" asp-items="@(new SelectList(ViewBag.Serieses, "Id", "Name"))">
            </select>
            <span class="text-danger" asp-validation-for="SeriesIds"></span>
        </div>

        <div class="form-group col-md-3">
            <label asp-for="ChannelIds"></label>
            <select class="form-control" multiple asp-for="ChannelIds" asp-items="@(new SelectList(ViewBag.Channels, "Id", "Name"))">
            </select>
            <span class="text-danger" asp-validation-for="ChannelIds"></span>
        </div>

    </div>

    <hr />

    <button type="submit" class="main-btn">
        <i class="fa fa-plus"></i> Add
    </button>

</form>

@section Scripts {
    <script src="~/lib/select2/js/select2.full.min.js"></script>
    <script>
        $('select').select2({
            theme: 'bootstrap4'
        });
    </script>
}
