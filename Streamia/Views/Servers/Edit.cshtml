@model Server
@{
    ViewData["Title"] = "Edit Server";
    ViewData["Icon"] = "edit";
}

@section Styles {
    <link href="~/lib/switchery/switchery.css" rel="stylesheet" />
}

@if (ViewData["Success"] != null)
{
    <div class="alert alert-success">
        <i class="fa fa-info-circle"></i> <strong>@ViewData["Success"]</strong>
    </div>
}

<form method="post">
    <div class="row">

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ServerState" />

        <div class="form-group col-md-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <div class="form-group col-md-3">
            <label asp-for="Ip"></label>
            <input asp-for="Ip" class="form-control" />
            <span class="text-danger" asp-validation-for="Ip"></span>
        </div>

        <div class="form-group col-md-3">
            <label asp-for="RootPassword"></label>
            <input asp-for="RootPassword" class="form-control" />
            <span class="text-danger" asp-validation-for="RootPassword"></span>
        </div>

        <div class="form-group col-md-3">
            <label asp-for="MaxClients"></label>
            <input asp-for="MaxClients" class="form-control" />
            <span class="text-danger" asp-validation-for="MaxClients"></span>
        </div>

    </div>
    <div class="row">

        <div class="form-group col-md-3">
            <label asp-for="HttpPort"></label>
            <input asp-for="HttpPort" class="form-control" />
            <span class="text-danger" asp-validation-for="HttpPort"></span>
        </div>

        <div class="form-group col-md-3">
            <label asp-for="HttpsPort"></label>
            <input asp-for="HttpsPort" class="form-control" />
            <span class="text-danger" asp-validation-for="HttpsPort"></span>
        </div>

        <div class="form-group col-md-3">
            <label asp-for="SshPort"></label>
            <input asp-for="SshPort" class="form-control" />
            <span class="text-danger" asp-validation-for="SshPort"></span>
        </div>

        <div class="form-group col-md-3">
            <label asp-for="RtmpPort"></label>
            <input asp-for="RtmpPort" class="form-control" />
            <span class="text-danger" asp-validation-for="RtmpPort"></span>
        </div>

    </div>

    <div class="row">
        <div class="form-group col-md-12">
            <label asp-for="IsRTMP"></label>
            <div>
                <input asp-for="IsRTMP" class="js-switch" />
            </div>
        </div>
    </div>

    <hr />

    <button class="btn btn-warning">
        <i class="fa fa-pencil"></i> Edit
    </button>

</form>

@section Scripts{
    <script src="~/lib/switchery/switchery.js"></script>
    <script>
        var elems = Array.prototype.slice.call(document.querySelectorAll('.js-switch'));
        elems.forEach(function (html) {
            new Switchery(html);
        });
    </script>
}

