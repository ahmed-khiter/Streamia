@model IEnumerable<Episode>
@{
    int lastSeason = 0;
}
@if (Model.Any())
{
    foreach (var episode in Model)
    {
        if(episode.Season > lastSeason)
        {
            <strong>Season: @episode.Season</strong>
        }
        lastSeason = episode.Season;
        <div id="@(episode.Season)_@episode.Number" data-sort="">
            <input asp-for="@episode.Season" type="hidden" />
            <input asp-for="@episode.Name" type="hidden" />
            <input asp-for="@episode.PosterUrl" type="hidden" />
            <input asp-for="@episode.Overview" type="hidden" />
            <input asp-for="@episode.Cast" type="hidden" />
            <input asp-for="@episode.Director" type="hidden" />
            <input asp-for="@episode.Gener" type="hidden" />
            <input asp-for="@episode.ReleaseDate" type="hidden" />
            <input asp-for="@episode.Runtime" type="hidden" />
            <input asp-for="@episode.Rating" type="hidden" />
        </div>
    }
}
