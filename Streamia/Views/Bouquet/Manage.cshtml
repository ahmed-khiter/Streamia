@model IEnumerable<Streamia.Models.Bouquet>
@{
    ViewData["Title"] = "Manage Bouquets";
    ViewData["Icon"] = "list";
}

<partial name="~/Views/Partials/_Search.cshtml" />

<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bouquet in Model)
        {
            <tr>
                <td>@bouquet.Name</td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@bouquet.Id"><i class="fa fa-edit"></i></a>
                    <form asp-action="Delete"
                          asp-route-id="@bouquet.Id"
                          style="display:inline"
                          onsubmit="return confirm('Are you sure you want to proceed?')">
                        <button class="btn btn-danger">
                            <i class="fa fa-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
