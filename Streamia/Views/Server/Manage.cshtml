@model IEnumerable<Server>
@{
    ViewData["Title"] = "Manage Servers";
    ViewData["Icon"] = "server";
}

@section Styles {
    <link href="~/datatables/css/jquery.dataTables.css" rel="stylesheet" />
    <link href="~/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Ip</th>
            <th>State</th>
            <th>CPU</th>
            <th>RAM</th>
            <th>Uptime</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var server in Model)
        {
            <tr>
                <td>@server.Name</td>
                <td>@server.Ip</td>
                <td id="@server.Id">
                    @{ string stateClass = "warning"; }
                    @if (server.State == State.ONLINE)
                    {
                        stateClass = "success";
                    }
                    else if (server.State == State.OFFLINE)
                    {
                        stateClass = "danger";
                    }
                    <i class="fa fa-circle text-@stateClass"></i> @server.State
                </td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>
                    <a class="btn btn-info" href="/servers/details/@server.Id"><i class="fa fa-info-circle"></i></a>
                    <a class="btn btn-warning" href="/servers/edit/@server.Id"><i class="fa fa-edit"></i></a>
                    <a onclick="return confirm('Are you sure you want to delete this item?');"
                       asp-action="Delete" asp-route-id="@server.Id" class="btn btn-danger"
                       id="delete" value="Delete"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{

    <script src="~/lib/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/datatables/js/jquery.dataTables.js"></script>
    <script src="~/datatables/js/dataTables.bootstrap4.js"></script>
    <script>
        $('table').DataTable();
        var connection = new signalR.HubConnectionBuilder().withUrl("/server-status-hub").build();
        connection.on("UpdateSignal", function (data) {
            var className = 'warning';
            var statusName = 'PROCESSING';
            if (data.state === 1) {
                className = 'success';
                statusName = 'ONLINE';
            } else if (data.state === 2) {
                className = 'danger';
                statusName = 'OFFLINE';
            }
            $(`#${data.id}`).html(`<i class="fa fa-circle text-${className}"></i> ${statusName}`);
        });
        connection.start();
    </script>
}
