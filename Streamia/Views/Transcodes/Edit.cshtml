@model Transcode
@{
    ViewData["Title"] = "Edit Transcode";
}

<partial name="~/Views/Partials/_Navigation.cshtml" />

<form method="post">

    <input type="hidden" asp-for="Id" />

    <div class="row">

        <div class="form-group col-md-6">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="VideoCodec"></label>
            <input asp-for="VideoCodec" class="form-control" />
            <span class="text-danger" asp-validation-for="VideoCodec"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="AudioCodec"></label>
            <input asp-for="AudioCodec" class="form-control" />
            <span class="text-danger" asp-validation-for="AudioCodec"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="MinBitrate"></label>
            <input asp-for="MinBitrate" class="form-control" />
            <span class="text-danger" asp-validation-for="MinBitrate"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="MaxBitrate"></label>
            <input asp-for="MaxBitrate" class="form-control" />
            <span class="text-danger" asp-validation-for="MaxBitrate"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="AvgAudioBitrate"></label>
            <input asp-for="AvgAudioBitrate" class="form-control" />
            <span class="text-danger" asp-validation-for="AvgAudioBitrate"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="AvgBitrate"></label>
            <input asp-for="AvgBitrate" class="form-control" />
            <span class="text-danger" asp-validation-for="AvgBitrate"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="BufferSize"></label>
            <input asp-for="BufferSize" class="form-control" />
            <span class="text-danger" asp-validation-for="BufferSize"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="CRF"></label>
            <input asp-for="CRF" class="form-control" />
            <span class="text-danger" asp-validation-for="CRF"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="Preset"></label>
            <input asp-for="Preset" class="form-control" />
            <span class="text-danger" asp-validation-for="Preset"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="Scaling"></label>
            <input asp-for="Scaling" class="form-control" />
            <span class="text-danger" asp-validation-for="Scaling"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="AspectRatio"></label>
            <input asp-for="AspectRatio" class="form-control" />
            <span class="text-danger" asp-validation-for="AspectRatio"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="AudioSampleRate"></label>
            <input asp-for="AudioSampleRate" class="form-control" />
            <span class="text-danger" asp-validation-for="AudioSampleRate"></span>
        </div>

    </div>

    <hr />

    <button type="submit" class="btn btn-warning">
        <i class="fa fa-pencil"></i> Edit
    </button>

</form>
