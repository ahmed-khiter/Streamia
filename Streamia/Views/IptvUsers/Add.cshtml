@model IptvUser
@{
    ViewData["Title"] = "Add IPTV User";
    ViewData["Icon"] = "plus";
}

@section Styles {
    <link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/ttskch/select2-bootstrap4-theme/dist/select2-bootstrap4.min.css" rel="stylesheet" />
}

<form method="post" asp-action="Add">
    <div class="row">
        <div class="form-group col-md-3">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validati-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Subscription"></label>
            <input asp-for="Subscription" class="form-control"/>
            <span asp-validation-for="Subscription" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="BouquetId"></label>
            <select asp-for="BouquetId" asp-items="@(new SelectList(ViewBag.Bouquets,"Id","Name"))" class="form-control"></select>
            <span asp-validation-for="BouquetId" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-md-12">
            <label asp-for="Notes"></label>
            <textarea asp-for="Notes" class="form-control"></textarea>
        </div>
    </div>

    <hr />

    <button type="submit" class="main-btn">
        <i class="fa fa-plus"></i> Add
    </button>
</form>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/lib/select2/js/select2.full.min.js"></script>

    <script>
        $('select').select2({
            placeholder: 'Select Bouquet',
            theme: 'bootstrap4'
        });
    </script>

}