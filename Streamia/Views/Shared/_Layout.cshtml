@inject SignInManager<AppUser> signInManager;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewData["Title"]</title>
    <link href="~/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/brands.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Raleway&display=swap" rel="stylesheet">

    @RenderSection("Styles", required: false)

    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />

</head>
<body>
    <div class="wrapper">
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3 class="m-0 p-0 font-weight-bold"><i class="fa fa-podcast"></i> Streamia</h3>
            </div>
            <ul class="list-unstyled components">
                <li>
                    <a href="/"><i class="fa fa-home"></i> Home</a>
                </li>

                @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                {

                    <li>
                        <a href="#panelSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                            <i class="fas fa-flask"></i> Panel
                        </a>
                        <div class="collapse list-unstyled" id="panelSubmenu">
                            <a asp-controller="servers" asp-action="add">
                                <i class="fa fa-server"></i> Servers
                            </a>

                                <a asp-controller="logs" asp-action="general">
                                    <i class="fa fa-file-archive-o"></i> Log Center
                                </a>
                            
                        </div>
                    </li>
                    <li>
                        <a href="#mediaSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                            <i class="fas fa-compact-disc"></i> Media
                        </a>
                        <div class="collapse list-unstyled" id="mediaSubmenu">
                            <a asp-controller="streams" asp-action="add">
                                <i class="fa fa-tv"></i> Streams
                            </a>
                            <a asp-controller="channels" asp-action="add">
                                <i class="fas fa-broadcast-tower"></i> Channles
                            </a>
                            <a asp-controller="movies" asp-action="add">
                                <i class="fa fa-film"></i> Movies
                            </a>
                            <a asp-controller="serieses" asp-action="add">
                                <i class="fas fa-play"></i> Serieses
                            </a>
                            <a asp-controller="Transcodes" asp-action="add">
                                <i class="fa fa-code"></i> Transcodes
                            </a>
                        </div>
                    </li>

                    <li>
                        <a href="#businessSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                            <i class="fas fa-user-tie"></i> Business
                        </a>
                        <div class="collapse list-unstyled" id="businessSubmenu">
                            <a asp-controller="bouquets" asp-action="add">
                                <i class="fa fa-cubes"></i> Bouquets
                            </a>
                            <a asp-controller="iptvusers" asp-action="add">
                                <i class="fa fa-user"></i> IPTV Users
                            </a>
                            <a asp-controller="categories" asp-action="add">
                                <i class="fa fa-share-alt"></i> Categories
                            </a>
                            <a asp-controller="resellers" asp-action="add">
                                <i class="fa fa-users"></i> Resellers
                            </a>
                        </div>
                    </li>
                }


                @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                {
                    <li>
                        <a asp-controller="settings" asp-action="general"><i class="fas fa-cog"></i> Settings</a>
                    </li>

                }

            </ul>
        </nav>

        <div id="content">
            <div class="content-overlay">
                <nav class="navbar navbar-expand-lg navbar-light bg-light mb-3">
                    <span class="page-title"><strong>@ViewData["Title"]</strong></span>
                    <ul class="nav navbar-nav ml-auto">
                        <li class="nav-item active profile-container">
                            @{
                                string profileName = User.Identity.GetName();
                                string profilePicture = User.Identity.ProfilePicture();

                                if (string.IsNullOrEmpty(profileName))
                                {
                                    profileName = "DEV ACCOUNT";
                                }
                                if (string.IsNullOrEmpty(profilePicture))
                                {
                                    profilePicture = "user.png";
                                }
                            }
                            <span class="profile-name">@profileName</span>
                            <img class="profile-picture" src="~/Pictures/@profilePicture" />
                        </li>
                    </ul>
                </nav>
                <div class="main-content">
                    @RenderBody()
                </div>
            </div>
        </div>

        <div class="right-bar d-flex flex-column justify-content-center align-items-end">
            <div class="right-bar-options d-flex justify-content-between">
                <a class="right-bar-option" href="#">Help</a>
                <a class="right-bar-option" href="#">Notifications</a>
                <a class="right-bar-option" href="#">Hot tasks</a>
            </div>
        </div>
    </div>

    <script src="~/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/bootstrap/dist/js/bootstrap.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/js/all.min.js"></script>

    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts", required: true)
    }

    <script>
        $('#sidebar li a').each(function () {
            let urlPart = window.location.pathname.toLowerCase().split('/')[1];
            let currentHref = $(this).attr('href').toLowerCase();
            if (
                window.location.pathname.toLowerCase() === currentHref ||
                (currentHref.includes(urlPart) && urlPart != '')
            ) {
                $(this).addClass('active');
                $(this).parent().addClass('show');
            }
        });
    </script>
</body>
</html>
