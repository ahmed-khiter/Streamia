@inject SignInManager<AdminUser> signInManager;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewData["Title"]</title>

    <link href="~/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/font-awesome/css/font-awesome.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)

    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true"/>

</head>
<body>
    <div class="wrapper">
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3 class="m-0 p-0 font-weight-bold"><i class="fa fa-podcast"></i> Streamia</h3>
            </div>
            <ul class="list-unstyled components">
                <li>
                    <a href="/"><i class="fa fa-home"></i> Home</a>
                </li>

                @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                {
                    <li>
                        <a href="#servers" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                            <i class="fa fa-server"></i> Servers
                        </a>
                        <ul class="collapse list-unstyled" id="servers">
                            <li>
                                <a asp-controller="servers" asp-action="add"><i class="fa fa-plus"></i> Add</a>
                            </li>
                            <li>
                                <a asp-controller="servers" asp-action="manage"><i class="fa fa-list"></i> Manage</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#streams" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                            <i class="fa fa-tv"></i> Streams
                        </a>
                        <ul class="collapse list-unstyled" id="streams">
                            <li>
                                <a asp-controller="streams" asp-action="add"><i class="fa fa-plus"></i> Add</a>
                            </li>
                            <li>
                                <a asp-controller="streams" asp-action="manage"><i class="fa fa-list"></i> Manage</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#channles" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                            <i class="fa fa-podcast"></i> Channles
                        </a>
                        <ul class="collapse list-unstyled" id="channles">
                            <li>
                                <a asp-controller="channels" asp-action="add"><i class="fa fa-plus"></i> Add</a>
                            </li>
                            <li>
                                <a asp-controller="channels" asp-action="manage"><i class="fa fa-list"></i> Manage</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#movies" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                            <i class="fa fa-film"></i> Movies
                        </a>
                        <ul class="collapse list-unstyled" id="movies">
                            <li>
                                <a asp-controller="movies" asp-action="add"><i class="fa fa-plus"></i> Add</a>
                            </li>
                            <li>
                                <a asp-controller="movies" asp-action="manage"><i class="fa fa-list"></i> Manage</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#serieses" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                            <i class="fa fa-video-camera"></i> Serieses
                        </a>
                        <ul class="collapse list-unstyled" id="serieses">
                            <li>
                                <a asp-controller="serieses" asp-action="add"><i class="fa fa-plus"></i> Add</a>
                            </li>
                            <li>
                                <a asp-controller="serieses" asp-action="manage"><i class="fa fa-list"></i> Manage</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#bouquets" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                            <i class="fa fa-cubes"></i> Bouquets
                        </a>
                        <ul class="collapse list-unstyled" id="bouquets">
                            <li>
                                <a asp-controller="bouquets" asp-action="add"><i class="fa fa-plus"></i> Add</a>
                            </li>
                            <li>
                                <a asp-controller="bouquets" asp-action="manage"><i class="fa fa-list"></i> Manage</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#categories" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                            <i class="fa fa-share-alt"></i> Categories
                        </a>
                        <ul class="collapse list-unstyled" id="categories">
                            <li>
                                <a asp-controller="categories" asp-action="add"><i class="fa fa-plus"></i> Add</a>
                            </li>
                            <li>
                                <a asp-controller="categories" asp-action="manage"><i class="fa fa-list"></i> Manage</a>
                            </li>
                        </ul>
                    </li>
                }

                <li>
                    <a href="#iptv-users" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fa fa-user"></i> IPTV Users
                    </a>
                    <ul class="collapse list-unstyled" id="iptv-users">
                        <li>
                            <a asp-controller="iptvusers" asp-action="add"><i class="fa fa-plus"></i> Add</a>
                        </li>
                        <li>
                            <a asp-controller="iptvusers" asp-action="manage"><i class="fa fa-list"></i> Manage</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="#resellers" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fa fa-users"></i> Resellers
                    </a>
                    <ul class="collapse list-unstyled" id="resellers">
                        <li>
                            <a asp-controller="resellers" asp-action="add"><i class="fa fa-plus"></i> Add</a>
                        </li>
                        <li>
                            <a asp-controller="resellers" asp-action="manage"><i class="fa fa-list"></i> Manage</a>
                        </li>
                    </ul>
                </li>

                @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin")) 
                {
                    <li>
                        <a asp-controller="settings" asp-action="general"><i class="fa fa-gears"></i> Settings</a>
                    </li>
                    <li>
                        <a asp-controller="logs" asp-action="general"><i class="fa fa-file-archive-o"></i> Log Center</a>
                    </li>
                }

            </ul>
        </nav>

        <div id="content">
            <div class="content-overlay">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <span class="page-title"><i class="fa fa-@ViewData["Icon"]"></i> <strong>@ViewData["Title"]</strong></span>
                    <ul class="nav navbar-nav ml-auto">
                        <li class="nav-item active profile-container">
                            @{
                                string profileName = User.Identity.GetName();
                                string profilePicture = User.Identity.ProfilePicture();

                                if (string.IsNullOrEmpty(profileName))
                                {
                                    profileName = "DEV ACCOUNT";
                                }
                                if (string.IsNullOrEmpty(profilePicture))
                                {
                                    profilePicture = "user.png";
                                }
                            }
                            <span class="profile-name">@profileName</span>
                            <img class="profile-picture" src="~/Pictures/@profilePicture" />
                            @*<a asp-controller="Account" asp-action="Logout" class="btn btn-danger">
                                <i class="fa fa-close"></i> Logout
                            </a>*@
                        </li>
                    </ul>
                </nav>
                <div class="main-content">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <script src="~/jquery/jquery.js"></script>
    <script src="~/bootstrap/dist/js/bootstrap.js"></script>

    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts", required: true)
    }
</body>
</html>


